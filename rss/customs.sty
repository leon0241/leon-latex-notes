\def\textrule#1{
    \parbox\textwidth{\hrulefill\hspace{0.5em}\lower.3ex\hbox{\textbf{#1}}\hspace{0.5em}\hrulefill}\vspace{1ex}
    \newline
}

\newcommand\longrule[1]{
    \noindent\rule{\textwidth}{#1}
}

\newcommand\ctl[1]{\mathrm{\mathbf{#1}}}


