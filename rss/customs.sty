% Set lists to have zero spacing between items to squeeze more in
\newenvironment{enumerate-tight}{
    \begin{enumerate}\setlength\itemsep{0em}
} {\end{enumerate}}

% Version with zero left bullet padding
\newenvironment{enumerate-zero}{
    \begin{enumerate}[leftmargin=*]\setlength\itemsep{0em}
} {\end{enumerate}}

% Alternative versions with alpha numbering
\newenvironment{enumerate-a-tight}{
    \begin{enumerate}[label=\alph*)]
        \setlength\itemsep{0em}
} {\end{enumerate}}

\newenvironment{enumerate-a-zero}{
\begin{enumerate}[leftmargin=*,label=\alph*)]
    \setlength\itemsep{0em}
} {\end{enumerate}}

\newenvironment{itemize-tight}{
    \begin{itemize} \setlength\itemsep{0em}
} {\end{itemize}}

\newenvironment{itemize-zero}{
    \begin{itemize}[leftmargin=*]\setlength\itemsep{0em}
} {\end{itemize}}
