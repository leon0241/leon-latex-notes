\def\textrule#1{
    \parbox\textwidth{\hrulefill\hspace{0.5em}\lower.3ex\hbox{#1}\hspace{0.5em}\hrulefill}\vspace{-2ex}
    \newline
}

\newcommand\longrule[1]{
    \vspace{-3pt}
    \noindent\rule{\textwidth}{#1}
}
